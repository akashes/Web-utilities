function* generateId(){
    let idValue = 1
    while(true){
        yield idValue
        idValue++
    }

}
const generatorObject = generateId()


const addInput=()=>{
        const {value} =generatorObject.next()  //getting 1 value incremented id from generator function
...................
....................


}
